<script webc:setup>
  function link_list(links, locale) {
    return new Intl.ListFormat(locale, {
      style: 'long',
      type: 'conjunction',
    }).format(links.map(link =>
      `<a href="${link.url}" lang="${link.lang}" hreflang="${link.lang}">${link.label}</a>`
    ))
  }
</script>

<main :class="`grid ${page.grid ? page.grid : ''} pb-lg`">
